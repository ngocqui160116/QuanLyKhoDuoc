@model Phoenix.Server.Web.Areas.Admin.Models.Medicine.MedicineModel

@using (Html.BeginForm())
{
    @section Breadcrumb{
        <div class="-intro-x breadcrumb mr-auto hidden sm:flex">
            <span>Chương trình</span> <i data-feather="chevron-right" class="breadcrumb__icon"></i>
            <a href="#" class="breadcrumb--active">Danh mục</a><i data-feather="chevron-right" class="breadcrumb__icon"></i>
            <a href="#" class="breadcrumb--active">Thuốc</a><i data-feather="chevron-right" class="breadcrumb__icon"></i>
            <a href="#" class="breadcrumb--active">Chi tiết thuốc</a>
        </div>
    }
    @Html.AntiForgeryToken()
    <div class="intro-y flex flex-col sm:flex-row items-center mt-8">
        <h2 class="text-lg font-medium mr-auto">
            Chi tiết thuốc @Model.Name
        </h2>
        <div class="w-full sm:w-auto flex mt-4 sm:mt-0">
            <a href="@Html.Raw(Url.Action("Index"))" class="btn btn-primary text-white shadow-md mr-2">
                <i data-feather="corner-down-left" class="w-4 h-4 mr-2"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-success text-white shadow-md mr-2">
                <i data-feather="save" class="w-4 h-4 mr-2"></i>Lưu
            </button>
            @*@if (Model.Status == "Nghỉ bán" || Model.Status == "nghỉ bán")
            {
                <a href="javascript:;" data-toggle="modal" data-target="#again-modal-preview" class="btn btn-warning text-white shadow-md mr-2">
                    <i data-feather="play" class="w-4 h-4 mr-2"></i> Kinh doanh lại
                </a>
            }
            else
            {
                <a href="javascript:;" data-toggle="modal" data-target="#pause-modal-preview" class="btn btn-warning text-white shadow-md mr-2">
                    <i data-feather="pause" class="w-4 h-4 mr-2"></i> Ngừng kinh doanh
                </a>
            }*@

            <a href="javascript:;" data-toggle="modal" data-target="#delete-modal-preview" class="btn btn-danger text-white shadow-md mr-2">
                <i data-feather="trash-2" class="w-4 h-4 mr-2"></i> Xóa
            </a>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}

<!-- Modal tạm ngừng kinh doanh -->
<!-- BEGIN: Modal Toggle -->
<!-- END: Modal Toggle -->
<!-- BEGIN: Modal Content -->
<div id="pause-modal-preview" class="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="p-5 text-center">
                    <i data-feather="help-circle" class="w-16 h-16 text-theme-21 mx-auto mt-3"></i>
                    <div class="text-3xl mt-5">THÔNG BÁO</div>
                    <div class="text-gray-600 mt-2">
                        Bạn có chắc muốn ngừng kinh doanh sản phẩm này?
                    </div>
                </div>
                @using (Html.BeginForm("Pause", "Medicine", new { id = Model.IdMedicine }))
                {
                    <div class="px-5 pb-8 text-center">
                        <button type="button" data-dismiss="modal" class="btn btn-outline-secondary w-24 dark:border-dark-5 dark:text-gray-300 mr-1">Thoát</button>
                        <button type="submit" class="btn btn-danger w-24">Đồng ý</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- END: Modal Content -->
<!-- Modal kinh doanh lại -->
<!-- BEGIN: Modal Toggle -->
<!-- END: Modal Toggle -->
<!-- BEGIN: Modal Content -->
<div id="again-modal-preview" class="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="p-5 text-center">
                    <i data-feather="play-circle" class="w-16 h-16 text-theme-21 mx-auto mt-3"></i>
                    <div class="text-3xl mt-5">THÔNG BÁO</div>
                    <div class="text-gray-600 mt-2">
                        Bạn có chắc muốn kinh doanh lại sản phẩm này?
                    </div>
                </div>
                @using (Html.BeginForm("Again", "Medicine", new { id = Model.IdMedicine }))
                {
                    <div class="px-5 pb-8 text-center">
                        <button type="button" data-dismiss="modal" class="btn btn-outline-secondary w-24 dark:border-dark-5 dark:text-gray-300 mr-1">Thoát</button>
                        <button type="submit" class="btn btn-danger w-24">Đồng ý</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- END: Modal Content -->
<!--Modal xóa-->
<!-- BEGIN: Modal Toggle -->
<!-- END: Modal Toggle -->
<!-- BEGIN: Modal Content -->
<div id="delete-modal-preview" class="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="p-5 text-center">
                    <i data-feather="x-circle" class="w-16 h-16 text-theme-21 mx-auto mt-3"></i>
                    <div class="text-3xl mt-5">THÔNG BÁO</div>
                    <div class="text-gray-600 mt-2">
                        Bạn thật sự muốn xóa thuốc này?
                        <br>Toàn bộ dữ liệu của thuốc này sẽ bị xóa!
                    </div>
                </div>
                @using (Html.BeginForm("Delete", "Medicine", new { id = Model.IdMedicine }))
                {
                    <div class="px-5 pb-8 text-center">
                        <button type="button" data-dismiss="modal" class="btn btn-outline-secondary w-24 dark:border-dark-5 dark:text-gray-300 mr-1">Thoát</button>
                        <button type="submit" class="btn btn-danger w-24">Xóa</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- END: Modal Content -->