@using Phoenix.Server.Services.Database;
@section Scripts{
    <script type="text/javascript" src="~/assets/js/tabulator.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
}
@section Breadcrumb{
    <div class="-intro-x breadcrumb mr-auto hidden sm:flex">
        <span>Chương trình</span> <i data-feather="chevron-right" class="breadcrumb__icon"></i>
        <a href="#" class="breadcrumb--active">Danh mục</a> <i data-feather="chevron-right" class="breadcrumb__icon"></i>
        <a href="#" class="breadcrumb--active">Thuốc</a>
    </div>
}
@Html.AntiForgeryToken()
<div class="intro-y flex flex-col sm:flex-row items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        Thuốc
    </h2>
    <div class="w-full sm:w-auto flex mt-4 sm:mt-0">
        <a href="@Url.Action("Create","Medicine")" class="btn btn-primary text-white shadow-md mr-2">Thêm mới</a>
    </div>
</div>
<div class="grid gap-6 mt-5">
    <div class="intro-y box p-5">
        <div class="grid grid-cols-12 gap-2">
            <div class="col-span-12 lg:col-span-6">
                <label>Thuốc</label>
                <input type="text" id="Name" class="form-control">
            </div>
            <div class="col-span-12 lg:col-span-6">
                <label>Số đăng ký</label>
                <input type="text" id="RegistrationNumber" class="form-control">
            </div>
        </div>
        <div class="grid mt-3">
            <div class="w-full sm:w-auto flex mt-5 sm:mt-0 ml-auto">
                <button type="button" onclick="onResetSearch();" class="btn btn-danger text-white shadow-md mr-2">Xóa tìm kiếm</button>
                <button type="button" onclick="onSearch();" class="btn btn-success text-white shadow-md mr-2">Tìm kiếm</button>
            </div>
        </div>
    </div>
</div>
<div class="intro-y box p-5 mt-5">
    <div id="main-grid"></div>
    <script>
        var dateFormatter = function (cell, formatterParams) {
            var value = cell.getValue();

            if (value) {
                value = moment(value).format("DD/MM/YYYY HH:mm:ss");
            }

            return value;
        }
        var table = new Tabulator("#main-grid", {
            layout: "fitDataFill",
            ajaxURL: "@Html.Raw(Url.Action("List", "Medicine"))",
            ajaxConfig: "post",
            ajaxRequesting: function (url, params) {
                params.Name = $('#Name').val();
                params.RegistrationNumber = $('#RegistrationNumber').val();
            },
            ajaxResponse: function (url, params, response) {
                return response;
            },
            ajaxFiltering: true,
            paginationSize: 10,
            paginationSizeSelector: [10, 25, 50, 100],
            pagination: "remote",
            paginationDataSent: {
                "size": "pageSize",
                "page": "page",
            },
            paginationDataReceived: {
                "data": "Data",
                "last_page": "Total"
            },
            placeholder: "Chưa có dữ liệu",
            columns: [
                {
                    title: "Mã thuốc", field: "IdMedicine", sorter: "string", width: 120, formatter(cell, formatterParams) {
                        return `<a href="../Admin/Medicine/Update/${cell.getData().IdMedicine}" class="text-theme-1 dark:text-theme-10">${cell.getData().IdMedicine}</a>`
                    }
                },
                {
                    title: "Tên thuốc", field: "Name", sorter: "string", width: 200, formatter(cell, formatterParams)
                    {
                        return `<a href="../Admin/Medicine/Update/${cell.getData().IdMedicine}" class="text-theme-1 dark:text-theme-10">${cell.getData().Name}</a>`
                    }
                },
                {
                    title: "Số đăng ký", field: "RegistrationNumber", sorter: "string", width: 150, formatter(cell, formatterParams) {
                        return `<a href="../Admin/Medicine/Update/${cell.getData().IdMedicine}" class="text-theme-1 dark:text-theme-10">${cell.getData().RegistrationNumber}</a>`
                    }
                },
                {
                    title: "Tên nhóm thuốc", field: "GroupName", sorter: "string", width: 300, formatter(cell, formatterParams) {
                        return `<a href="../Admin/Medicine/Update/${cell.getData().IdMedicine}" class="text-theme-1 dark:text-theme-10">${cell.getData().GroupName}</a>`
                    }
                },
                {
                    title: "Hoạt chất", field: "Active", sorter: "string", width: 180, formatter(cell, formatterParams) {
                        return `<a href="../Admin/Medicine/Update/${cell.getData().IdMedicine}" class="text-theme-1 dark:text-theme-10">${cell.getData().Active}</a>`
                    }
                },
                {
                    title: "Hàm lượng", field: "Content", sorter: "string", width: 180, formatter(cell, formatterParams) {
                        return `<a href="../Admin/Medicine/Update/${cell.getData().IdMedicine}" class="text-theme-1 dark:text-theme-10">${cell.getData().Content}</a>`
                    }
                },
                {
                    title: "Quy cách đóng gói", field: "Packing", sorter: "string", width: 250, formatter(cell, formatterParams) {
                        return `<a href="../Admin/Medicine/Update/${cell.getData().IdMedicine}" class="text-theme-1 dark:text-theme-10">${cell.getData().Packing}</a>`
                    }
                },
                {
                    title: "Trạng thái", field: "Status", sorter: "string", width: 180, formatter(cell, formatterParams) {
                        return `<a href="../Admin/Medicine/Update/${cell.getData().IdMedicine}" class="text-theme-1 dark:text-theme-10">${cell.getData().Status}</a>`
                    }
                },
                {
                    title: "", field: "IdMedicine", sorter: "string", width: 80, formatter(cell, formatterParams) {
                        return `<a href="../Admin/Medicine/Update/${cell.getData().IdMedicine}" class="btn btn-primary text-white shadow-md mr-2">Sửa</a>`
                    }
                },
            ],
        });
        let onSearch = (e) => {
            table.setData();
        }
        let onResetSearch = (e) => {
            $('#Name').val('');
            $('#RegistrationNumber').val('');
            table.setData();
        }
    </script>
</div>

