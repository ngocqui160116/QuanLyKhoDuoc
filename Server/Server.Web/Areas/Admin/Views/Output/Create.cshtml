@model Phoenix.Server.Web.Areas.Admin.Models.Output.OutputModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="intro-y flex flex-col sm:flex-row items-center mt-8">
        <h2 class="text-lg font-medium mr-auto">
            Tạo phiếu xuất
        </h2>
        <div class="w-full sm:w-auto flex mt-4 sm:mt-0">
            <div class="w-full sm:w-auto flex mt-4 sm:mt-0">
                <a href="@Html.Raw(Url.Action("Index"))" class="button w-32 mr-2 mb-2 flex items-center justify-center bg-theme-7 text-white">
                    <i data-feather="x-octagon" class="w-4 h-4 mr-2"></i> Hủy phiếu nhập
                </a>
                <button type="submit" class="button w-32 mr-2 mb-2 flex items-center justify-center bg-theme-9 text-white">
                    <i data-feather="save" class="w-4 h-4 mr-2"></i>Lưu
                </button>
            </div>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}

