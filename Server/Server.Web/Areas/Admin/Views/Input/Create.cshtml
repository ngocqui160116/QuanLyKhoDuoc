@model Phoenix.Server.Web.Areas.Admin.Models.Input.InputModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="intro-y flex flex-col sm:flex-row items-center mt-8">
        <h2 class="text-lg font-medium mr-auto">
            Tạo phiếu nhập
        </h2>
        <div class="w-full sm:w-auto flex mt-4 sm:mt-0">
            <a href="@Html.Raw(Url.Action("Index"))" class="button w-32 mr-2 mb-2 flex items-center justify-center bg-theme-7 text-white">
                <i data-feather="corner-down-left" class="w-4 h-4 mr-2"></i> Quay lại
            </a>
            <button type="submit" class="button w-32 mr-2 mb-2 flex items-center justify-center bg-theme-9 text-white">
                <i data-feather="save" class="w-4 h-4 mr-2"></i>Lưu
            </button>
            @*<a href="javascript:;" data-toggle="modal" data-target="#complete-modal" class="button w-32 mr-2 mb-2 flex items-center justify-center bg-theme-7 text-white">
                <i data-feather="check-circle" class="w-4 h-4 mr-2"></i>Hoàn thành
            </a>*@
            <a href="javascript:;" data-toggle="modal" data-target="#delete-modal" class="button w-32 mr-2 mb-2 flex items-center justify-center bg-theme-6 text-white">
                <i data-feather="trash" class="w-4 h-4 mr-2"></i>Xóa
            </a>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
<!--Modal Delete-->
<div class="modal" id="delete-modal">
    <div class="modal__content">
        <div class="p-5 text-center">
            <i data-feather="x-circle" class="w-16 h-16 text-theme-6 mx-auto mt-3"></i>
            <div class="text-3xl mt-5">Bạn có chắc chắn muốn xóa?</div>
            <div class="text-gray-600 mt-2">Do you really want to delete these records? This process cannot be undone.</div>
        </div>
        @using (Html.BeginForm("Delete", "Input"))
        {
            <div class="px-5 pb-8 text-center">
                <button type="button" data-dismiss="modal" class="button w-24 border text-gray-700 dark:border-dark-5 dark:text-gray-300 mr-1">Không! cảm ơn.</button>
                <button type="submit" class="button w-24 bg-theme-6 text-white">Đồng ý</button>
            </div>
            
        }
    </div>
</div>

