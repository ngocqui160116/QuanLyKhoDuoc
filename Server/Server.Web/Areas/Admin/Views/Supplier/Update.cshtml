@model Phoenix.Server.Web.Areas.Admin.Models.Supplier.SupplierModel

@using (Html.BeginForm())
{
    @section Breadcrumb{
        <div class="-intro-x breadcrumb mr-auto hidden sm:flex">
            <span>Chương trình</span> <i data-feather="chevron-right" class="breadcrumb__icon"></i>
            <a href="#" class="breadcrumb--active">Đối tác</a> <i data-feather="chevron-right" class="breadcrumb__icon"></i>
            <a href="#" class="breadcrumb--active">Nhà cung cấp</a> <i data-feather="chevron-right" class="breadcrumb__icon"></i>
            <a href="#" class="breadcrumb--active">Cập nhật thông tin</a>
        </div>
    }
    @Html.AntiForgeryToken()
    <div class="intro-y flex flex-col sm:flex-row items-center mt-8">
        <h2 class="text-lg font-medium mr-auto">
            Tên nhà cung cấp : @Model.Name
        </h2>
        <div class="w-full sm:w-auto flex mt-4 sm:mt-0">
            <a href="@Html.Raw(Url.Action("Index"))" class="btn btn-primary text-white shadow-md mr-2">
                <i data-feather="skip-back" class="w-4 h-4 mr-2"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-success text-white shadow-md mr-2">
                <i data-feather="save" class="w-4 h-4 mr-2"></i>Lưu
            </button>
            <a href="javascript:;" data-toggle="modal" data-target="#delete-modal" class="btn btn-danger text-white shadow-md mr-2">
                <i data-feather="trash" class="w-4 h-4 mr-2"></i> Xóa
            </a>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
<div class="modal" id="delete-modal">
    <div class="modal__content">
        <div class="p-5 text-center">
            <i data-feather="x-circle" class="w-16 h-16 text-theme-6 mx-auto mt-3"></i>
            <div class="text-3xl mt-5">Bạn có chắc chắn muốn xóa?</div>
            <div class="text-gray-600 mt-2">Do you really want to delete these records? This process cannot be undone.</div>
        </div>
        @using (Html.BeginForm("Delete", "Supplier", new { id = Model.IdSupplier }))
        {
            <div class="px-5 pb-8 text-center">
                <button type="button" data-dismiss="modal" class="button w-24 border text-gray-700 dark:border-dark-5 dark:text-gray-300 mr-1">Không! cảm ơn.</button>
                <button type="submit" class="button w-24 bg-theme-6 text-white">Đồng ý</button>
            </div>
        }
    </div>
</div>
<div class="modal" id="back-modal">
    <div class="modal__content">
        <div class="p-5 text-center">
            <i data-feather="x-circle" class="w-16 h-16 text-theme-6 mx-auto mt-3"></i>
            <div class="text-3xl mt-5">Bạn có chắc chắn muốn xóa?</div>
            <div class="text-gray-600 mt-2">Do you really want to delete these records? This process cannot be undone.</div>
        </div>
        @using (Html.BeginForm("Delete", "Supplier", new { id = Model.IdSupplier }))
        {
            <div class="px-5 pb-8 text-center">
                <button type="button" data-dismiss="modal" class="button w-24 border text-gray-700 dark:border-dark-5 dark:text-gray-300 mr-1">Không! cảm ơn.</button>
                <button type="submit" class="button w-24 bg-theme-6 text-white">Đồng ý</button>
            </div>
        }
    </div>
</div>