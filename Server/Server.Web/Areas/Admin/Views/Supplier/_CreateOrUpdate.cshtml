@using Falcon.Web.Mvc.HtmlExtensions
@model Phoenix.Server.Web.Areas.Admin.Models.Supplier.SupplierModel
<style>
    .field-validation-error {
        color: #ff0000;
        font-weight: bold;
    }

    input.input-validation-error {
        border: 1px solid #ff0000;
    }
</style>
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.IdSupplier)
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <div class="intro-y box p-5">
            <div class="mt-3">
                <label for="crud-form-1" class="form-label">Tên nhà cung cấp</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control w-full" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="mt-3">
                <div>
                    <label  for="crud-form-1" class="form-label">Địa chỉ</label>
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control w-full" } })
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
            </div>
        </div>
    </div>
    <div class="intro-y col-span-12 lg:col-span-6">
        <div class="intro-y box p-5">
            <div class="mt-3">
                <div>
                    <label  for="crud-form-1" class="form-label">Số điện thoại</label>
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control w-full" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber)
                </div>
            </div>
            <div class="mt-3">
                <div>
                    <label  for="crud-form-1" class="form-label">Email</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control w-full" } })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
        </div>
    </div>
</div>
