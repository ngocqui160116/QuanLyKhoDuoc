<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Phoenix.Mobile.Pages.Common.AccountPage"
             xmlns:common="clr-namespace:Phoenix.Mobile.PageModels.Common" 
             x:DataType="common:AccountPageModel">
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection>
                    <ImageCell Text="Thông tin tài khoản"
                               Command="{Binding ProfileCommand}"
                               ImageSource="camera.png" />
                    <ImageCell Text="Đổi mật khẩu"  
                               ImageSource="xamarin_logo.png" />
                    <ImageCell Text="Đăng xuất" 
                               Command="{Binding LogOutCommand}"
                               ImageSource="xamarin_logo.png" />
                </TableSection>
            </TableRoot>
        </TableView>

    </ContentPage.Content>
</ContentPage>