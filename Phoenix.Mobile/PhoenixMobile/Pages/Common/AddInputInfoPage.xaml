<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:xe="clr-namespace:XamEffects;assembly=XamEffects" 
             xmlns:common="clr-namespace:Phoenix.Mobile.PageModels.Common" 
             xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms" xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns:medicine="clr-namespace:Phoenix.Mobile.Core.Models.Medicine;assembly=Phoenix.Mobile.Core" x:DataType="common:AddInputInfoPageModel"
             x:Class="Phoenix.Mobile.Pages.Common.AddInputInfoPage"
             ControlTemplate="{StaticResource FullScreenHasBack}">
    <ContentPage.Content>
        
        <StackLayout>
            <StackLayout HeightRequest="50"
                         WidthRequest="50">
                <Label Text="Danh sách sản phẩm"
                       xe:Commands.Tap="{Binding SelectMedicine}" 
                       FontSize="Small"
                       Margin="5,2,0,0"
                       BackgroundColor="WhiteSmoke"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>

            </StackLayout>
            <Frame xe:Commands.Tap="{Binding SelectMedicine}" 
                   CornerRadius="15" 
                   HeightRequest="100"
                   IsVisible="{Binding IsOpen}">
                <Label
                    Text="Thêm sản phẩm"
                    FontSize="25"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </Frame>
            
            <Frame CornerRadius="15" 
                   IsVisible="{Binding IsClose}">
                
                <ListView ItemsSource="{Binding ListMedicine}" 
                          HeightRequest="200" BackgroundColor="White"
                          x:Name="searchResults"
                          HasUnevenRows="True"
                          SeparatorVisibility="None"
                          HorizontalOptions="FillAndExpand"
                          VerticalOptions="FillAndExpand">
                    <ListView.ItemTemplate>

                        <DataTemplate x:DataType="medicine:MedicineModel">
                            <ViewCell>
                                <StackLayout Margin="6,4,6,4"
                                             BackgroundColor="White">
                                    
                                    <StackLayout Orientation="Horizontal" 
                                                 HorizontalOptions="StartAndExpand" >
                                        <Image Source="@drawable/icon_medicine"
                                               WidthRequest="75"
                                               HorizontalOptions="StartAndExpand"
                                               VerticalOptions="CenterAndExpand">
                                        </Image>

                                        <StackLayout Orientation="Vertical">
                                            <Label Text="{Binding Name}"
                                                   Margin="8"
                                                   FontAttributes="Bold"
                                                   FontSize="Large" />

                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="Số ĐK:"
                                                       Margin="8,2,8,4"
                                                       FontSize="Small"/>
                                                <Label Text="{Binding RegistrationNumber}"
                                                       Margin="2,2,8,4"
                                                       TextColor="DarkSlateGray"
                                                       IsEnabled="False"
                                                       FontSize="Small"/>
                                                <Label Text="ĐVT:"
                                                       Margin="8,2,8,4"
                                                       IsEnabled="False"
                                                       FontSize="Small"/>
                                                <Label Text="{Binding NameUnit}"
                                                       Margin="2,2,8,4"
                                                       IsEnabled="False"
                                                       TextColor="DarkSlateGray"  
                                                       FontSize="Small"/>
                                            </StackLayout>
                                        </StackLayout>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>
            </Frame>

            <Frame CornerRadius="15" >
                <StackLayout  BackgroundColor="White">
                    <Grid x:DataType="common:AddInputInfoPageModel">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.3*"/>
                            <ColumnDefinition Width="0.7*"/>
                        </Grid.ColumnDefinitions>


                        <Label  Grid.Row="2"
                                Grid.Column="0" 
                                Margin="10,5,0,0"                               
                                WidthRequest="100" 
                                FontSize="Medium" 
                                Text="Số lô"/>
                        <Entry  Grid.Row="2"
                                Grid.Column="1"
                                TextColor="Black"
                                Text="{Binding IdBatch}"
                                Placeholder="Số lô"
                                WidthRequest="200"/>

                        <Label  Grid.Row="3"
                                Grid.Column="0" 
                                Margin="10,5,0,0" 
                                WidthRequest="115" 
                                FontSize="Medium" 
                                Text="HSD"/>
                        <DatePicker Grid.Row="3"
                                    Grid.Column="1"
                                    TextColor="Black"
                                    Date="{Binding HSD}"
                                    Format="dd/MM/yyyy"
                                    WidthRequest="200" />


                        <Label  Grid.Row="4"
                                Grid.Column="0" 
                                Margin="10,5,0,0" 
                                WidthRequest="95" 
                                FontSize="Medium" 
                                Text="Số lượng"/>
                        <Entry  Grid.Row="4"
                                Grid.Column="1"
                                TextColor="Black"
                                Text="{Binding Count}"
                                Placeholder="0"
                                WidthRequest="200"                         
                                Keyboard="Numeric"/>

                        <Label  Grid.Row="5"
                                Grid.Column="0" 
                                Margin="10,5,0,0" 
                                WidthRequest="95" 
                                FontSize="Medium" 
                                Text="Giá nhập"/>
                        <Entry  Grid.Row="5"
                                Grid.Column="1"
                                TextColor="Black"
                                Text="{Binding InputPrice}"
                                Placeholder="0"
                                WidthRequest="200"                         
                                Keyboard="Numeric"/>

                    </Grid>
                </StackLayout>
            </Frame>

            <StackLayout Margin="0,50,0,5">
                <AbsoluteLayout HorizontalOptions="Center"
>
                    <Grid xe:TouchEffect.Color="AliceBlue"
                          xe:Commands.Tap="{Binding AddMedicineCommand}">
                        <forms:CachedImage Source="btn_Save" 
                                           Grid.Row="0"
                                           HeightRequest="50"/>
                        <Label Grid.Row="0"
                               FontSize="Medium"
                               HorizontalOptions="Center"
                               FontAttributes="Bold"
                               TextColor="#fff"
                               Text="Xác nhận"/>
                    </Grid>

                </AbsoluteLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

