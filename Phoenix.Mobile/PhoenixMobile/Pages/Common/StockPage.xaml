<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Phoenix.Mobile.Pages.Common.StockPage"
             xmlns:xe="clr-namespace:XamEffects;assembly=XamEffects" 
             xmlns:common="clr-namespace:Phoenix.Mobile.PageModels.Common" 
             xmlns:stock="clr-namespace:Phoenix.Mobile.Core.Models.Stock;assembly=Phoenix.Mobile.Core" 
             xmlns:controls="clr-namespace:Phoenix.Mobile.Controls" 
             x:DataType="common:StockPageModel"
             ControlTemplate="{StaticResource FullScreenHasBack}">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <SearchBar x:Name="searchBar" 
                           WidthRequest="420" 
                           HorizontalOptions="Fill"
                           VerticalOptions="CenterAndExpand"
                           Placeholder="Nhập thông tin"
                           SearchCommand="{Binding PerformSearch}" 
                           SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"/>
                <ImageButton Margin="5,0,0,0"  
                             xe:Commands.Tap="{Binding AddStockCommand}"
                             BackgroundColor="White" 
                             HorizontalOptions="End" 
                             Source="icon_add"/>
            </StackLayout>

            <ListView ItemsSource="{Binding Stocks}"
                      x:Name="searchResults"
                      HasUnevenRows="True"
                      BackgroundColor="#ecf0f1"
                      SeparatorVisibility="None"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      SelectedItem="{Binding SelectedStock}">

                <ListView.ItemTemplate>

                    <DataTemplate x:DataType="stock:StockModel">
                        <ViewCell>
                            <StackLayout Margin="6,4,6,4"
                                         BackgroundColor="White">
                                <StackLayout Orientation="Horizontal" HeightRequest="50">
                                    <Label Text="Mã kiểm kho:"
                                           Margin="10,0,0,0"
                                           FontSize="Medium" />
                                    <Label Text="{Binding Id}"
                                           FontAttributes="Bold"
                                           Margin="10,0,0,0"
                                           FontSize="Medium" />
                                </StackLayout>

                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Người kiểm:"
                                           Margin="10,0,0,0"
                                           FontSize="Medium" />
                                    <Label Text="{Binding StaffName}"
                                           Margin="8,0,8,0"
                                           FontSize="Medium" />
                                    <controls:CustomDatePicker  
                                           Format="dd/MM/yyyy"
                                           Date="{Binding Date}"
                                           TextColor="ForestGreen"
                                           HorizontalOptions="EndAndExpand"
                                           Margin="2"
                                           FontSize="15" />
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>